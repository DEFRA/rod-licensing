{
  "packages": [
    "packages/*"
  ],
  "version": "1.18.0-rc.2",
  "npmClient": "npm",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "command": {
    "bootstrap": {},
    "version": {
      "allowBranch": [
        "master",
        "develop"
      ],
      "message": "chore(release): publish %s"
    },
    "publish": {
      "message": "chore(release): publish %s",
      "allowBranch": [
        "master",
        "develop"
      ],
      "ignoreChanges": [
        ".*",
        "*.md",
        "docker/*",
        "sonar-project.properties"
      ]
    }
  }
}
