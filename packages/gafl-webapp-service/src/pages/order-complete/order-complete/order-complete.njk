{% extends "layout.njk" %}

{% from "fieldset/macro.njk" import govukFieldset %}
{% from "button/macro.njk" import govukButton %}
{% from "panel/macro.njk" import govukPanel %}

{% block pageTitle %}{{ data.title }}{{ mssgs.gov_uk }}{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        {{ govukPanel({
          titleText: data.title,
          html: data.licencePanelHTML
        }) }}

        <div class="govuk-!-margin-bottom-9">
            <h2 class="govuk-heading-m">{{ mssgs.order_complete_subheading }}</h2>
            <p class="govuk-body">
                <a class="govuk-link" href="{{ data.uri.licenceDetails }}">{{ mssgs.order_complete_view_details }}</a>
            </p>

            {% for paragraph in data.viewDetailsParagraphs %}
            <p class="govuk-body">{{ paragraph }}</p>
            {% endfor %}

            <h2 class="govuk-heading-m">{{ mssgs.order_complete_when_fishing }}</h2>

            <p class="govuk-body">{{ data.whenFishingParagraph | safe }}</p>

            <p class="govuk-body">
                {{ mssgs.order_complete_when_fishing_byelaws_preamble }}
                <a class="govuk-link" href="{{ data.uri.byelaws }}" target="_blank">{{ mssgs.order_complete_when_fishing_byelaws_link }}</a>
            </p>

            {% if data.displayCatchReturnInfo %}
            <p class="govuk-body">
                {{ mssgs.order_complete_when_fishing_salmon_para_part1 }}
                <a class="govuk-link" href="{{ data.uri.salmonAndSeaTrout }}" target="_blank">{{ mssgs.order_complete_when_fishing_salmon_link }}</a>
                {{ mssgs.order_complete_when_fishing_salmon_para_part2 }}
            </p>
            {% endif %}

            <h2 class="govuk-heading-m no-print">{{  mssgs.order_complete_help_us }}</h2>
            <p class="govuk-body no-print">
                <a class="govuk-link" href="{{ data.uri.feedback }}">{{ mssgs.order_complete_tell_us_link }}</a>
                {{ mssgs.order_complete_tell_us_time }}
            </p>

            <h2 class="govuk-heading-m no-print">{{ mssgs.order_complete_income_spend }}</h2>
            <p class="govuk-body no-print">
                {{ mssgs.order_complete_annual_report_part1 }}
                <a class="govuk-link" href="{{ data.uri.annualReport }}">{{ mssgs.order_complete_annual_report_link }}</a>
                {{ mssgs.order_complete_annual_report_part2 }}
            </p>
        </div>

    </div>
</div>
{% endblock %}
