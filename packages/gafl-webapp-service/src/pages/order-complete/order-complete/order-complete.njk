{% extends "layout.njk" %}

{% from "fieldset/macro.njk" import govukFieldset %}
{% from "button/macro.njk" import govukButton %}
{% from "panel/macro.njk" import govukPanel %}

{% block pageTitle %}{{ data.title }}{{ mssgs.gov_uk }}{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        {{ govukPanel({
          titleHtml: data.titleHtml,
          html: mssgs.order_complete_licence_count_prefix + '<strong>' + data.licencePanelText + '</strong>'
        }) }}

        <div class="govuk-!-margin-bottom-9">
            <p class="govuk-body">
                <a class="govuk-link" href="{{ data.uri.licenceDetails }}">{{ mssgs.order_complete_view_details }}</a>
            </p>

            <h2 class="govuk-heading-m">{{ mssgs.order_complete_subheading }}</h2>

            <p class="govuk-body">{{ mssgs.order_complete_conf_info_1 }}</p>
            <p class="govuk-body">{{ mssgs.order_complete_conf_info_2 }}</p>
            <p class="govuk-body">{{ mssgs.order_complete_conf_info_3 }}</p>

            {% if data.displayCatchReturnInfo %}
                <div class="govuk-!-margin-bottom-3">
                    <h2 class="govuk-heading-l">{{ mssgs.order_complete_subheading_rcr }}</h2>
                    <div class="govuk-warning-text">
                        <span class="govuk-warning-text__icon" aria-hidden="true">{{ mssgs.explination }}</span>
                            <strong class="govuk-warning-text__text">
                                <span class="govuk-warning-text__assistive">{{ mssgs.warning }}</span>
                                <p class="govuk-body no-print">
                                    <strong>
                                        {{ mssgs.order_complete_warning_body_1 }}<span><a class="govuk-link" href="https://www.gov.uk/catch-return">{{ mssgs.order_complete_warning_body_1_link }}</a></span>{{ mssgs.order_complete_warning_body_2 }}
                                    </strong>
                                </p>
                                <p class="govuk-body print-area">
                                    {{ mssgs.order_complete_warning_body_3 }}
                                </p>
                            </strong>
                        </div>
                    </div>
            {% endif %}

            <p class="govuk-body">{{ mssgs.order_complete_warning_body_4 }}<a class="govuk-link" rel="noreferrer noopener" href="https://www.gov.uk/guidance/national-rod-fishing-byelaws-for-england-freshwater-fishing-with-a-rod-and-line" target="_blank">{{ mssgs.order_complete_warning_body_4_link }}</a>{{ mssgs.period }}</p>

            <p class="govuk-body">
                <a class="govuk-link" href="https://www.gov.uk/government/publications/fisheries-annual-report-2020-to-2021/fisheries-annual-report-2020-to-2021">{{ mssgs.order_complete_fisheries_report_link }}</a>{{ mssgs.order_complete_fisheries_report_suffix }}
            </p>
            <p class="govuk-body no-print"><a class="govuk-link" href="{{ data.uri.feedback }}">{{ mssgs.order_complete_tell_us }}</a>{{ mssgs.order_complete_tell_us_link }}</p>

            {{ govukButton({
                href: data.uri.new,
                attributes: { id: 'continue' },
                text: mssgs.buy_another_licence,
                classes: "govuk-!-margin-top-4 no-print govuk-button--secondary"
            }) }}
        </div>

    </div>
</div>
{% endblock %}
