{% extends "layout.njk" %}

{% set title = mssgs.access_statement_title %}
{% block pageTitle %}{{ title }}{{ mssgs.header_service_name_title }}{{ mssgs.gov_uk }}{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <h1 class="govuk-heading-l">{{ mssgs.access_statement_heading }}</h1>
        <p class="govuk-body">{{ mssgs.access_statement_body_1 }}<a href="/" class="govuk-link" target="_blank">{{ mssgs.access_statement_body_link }}</a>{{ mssgs.access_statement_body_2 }}</p>
        <p class="govuk-body">{{ mssgs.access_statement_body_3 }}</p>

        <ul class="govuk-list govuk-list--bullet">
            <li>{{ mssgs.access_statement_bulletpoint_1 }}</li>
            <li>{{ mssgs.access_statement_bulletpoint_2 }}</li>
            <li>{{ mssgs.access_statement_bulletpoint_3 }}</li>
            <li>{{ mssgs.access_statement_bulletpoint_4 }}</li>
            <li>{{ mssgs.access_statement_bulletpoint_5 }}</li>
        </ul>

        <p class="govuk-body">{{ mssgs.access_statement_made_simple }}</p>
        <p class="govuk-body">{{ mssgs.access_statement_ability_net_1 }}<a href="https://mcmw.abilitynet.org.uk/" class="govuk-link" target="_blank">{{ mssgs.access_statement_ability_net_link}}</a>{{ mssgs.access_statement_ability_net_2 }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_how_subheading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_how_info }}</p>
        <p class="govuk-body">{{ mssgs.access_statement_how_info_2 }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_feedback_subheading }}</h2>

        <h3 class="govuk-heading-m">{{ mssgs.access_statement_other_ways_to_buy_subheading }}</h3>
        <p class="govuk-body">{{ mssgs.access_statement_other_ways_to_buy_body_1 }}</p>
        <ul class="govuk-list">
            <li>{{ mssgs.access_statement_other_ways_to_buy_body_2 }}</li>
            <li>{{ mssgs.access_statement_other_ways_to_buy_body_3 }}</li>
            <li>{{ mssgs.access_statement_other_ways_to_buy_body_4 }}</li>
            <li><a href="https://www.gov.uk/call-charges" class="govuk-link" target="_blank">{{ mssgs.access_statement_other_ways_to_buy_body_link }}</a></li>
        </ul>

        <h3 class="govuk-heading-m">{{ mssgs.access_statement_reporting_subheading }}</h3>
        <p class="govuk-body">{{ mssgs.access_statement_reporting_info }}</p>
        <ul class="govuk-list">
            <li>{{ mssgs.access_statement_reporting_body_1 }}</li>
            <li><a href="mailto:enquiries@environment-agency.gov.uk" class="govuk-link">{{ mssgs.access_statement_reporting_body_2 }}</a></li>            
            <li>{{ mssgs.access_statement_reporting_body_3 }}</li>
            <li>{{ mssgs.access_statement_reporting_body_4 }}</li>
            <li><a href="https://www.gov.uk/call-charges" class="govuk-link" target="_blank">{{ mssgs.access_statement_reporting_body_5 }}</a></li>
        </ul>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_enforcement_subheading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_enforcement_body }}<a href="https://www.equalityadvisoryservice.com/" class="govuk-link" target="_blank">{{ mssgs.access_statement_enforcement_link }}</a>{{ mssgs.period }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_visit_heading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_visit }}</p>
        <p class="govuk-body">{{ mssgs.access_statement_visit_info_1 }}<a href="https://www.gov.uk/government/organisations/environment-agency/about/access-and-opening" class="govuk-link" target="_blank">{{ mssgs.access_statement_visit_info_link }}</a>{{ mssgs.access_statement_visit_info_2 }}</p>
        <p class="govuk-body">{{ mssgs.access_statement_visit_info_text_service }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_tech_heading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_tech_body }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_compliance_heading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_compliance_body_1 }}<a href="https://www.w3.org/TR/WCAG21/" class="govuk-link" target="_blank">{{ mssgs.access_statement_compliance_body_link_1 }}</a>{{ mssgs.period }}</p>
        <p class="govuk-body">{{ mssgs.access_statement_compliance_body_2 }}<a href="https://www.w3.org/TR/WCAG21/" class="govuk-link" target="_blank">{{ mssgs.access_statement_compliance_body_link_2 }}</a>{{ mssgs.period }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_nonaccess_heading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_nonaccess_body }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_noncompliance_heading }}</h2>
        <ul class="govuk-list govuk-list--bullet">
            <li> {{ mssgs.access_statement_noncompliance_body_1 }}<a href="https://www.w3.org/WAI/WCAG21/Understanding/keyboard-no-exception.html" class="govuk-link" target="_blank">{{ mssgs.access_statement_noncompliance_body_link_1 }}</a>{{ mssgs.access_statement_noncompliance_body_2 }}</li>
            <li> {{ mssgs.access_statement_noncompliance_body_3 }}<a href="https://www.w3.org/WAI/WCAG21/Understanding/contrast-enhanced.html" class="govuk-link" target="_blank">{{ mssgs.access_statement_noncompliance_body_link_2 }}</a>{{ mssgs.access_statement_noncompliance_body_4 }} </li>
            <li> {{ mssgs.access_statement_noncompliance_body_5 }}<a href="https://www.w3.org/WAI/WCAG21/Understanding/link-purpose-link-only.html" class="govuk-link" target="_blank">{{ mssgs.access_statement_noncompliance_body_link_3 }}</a>{{ mssgs.access_statement_noncompliance_body_6 }} </li>
        </ul>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_burden_title }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_none }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_not_in_scope_title }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_none }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_prep_heading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_prep_body_1 }}</p>
        <p class="govuk-body">{{ mssgs.access_statement_prep_body_2 }}</p>
        <p class="govuk-body">{{ mssgs.access_statement_prep_body_3 }}</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>{{ mssgs.access_statement_prep_bulletpoint_1 }}</li>
            <li>{{ mssgs.access_statement_prep_bulletpoint_2 }}</li>
            <li>{{ mssgs.access_statement_prep_bulletpoint_3 }}</li>
        </ul>
        <p class="govuk-body">{{ mssgs.access_statement_prep_body_4 }}</p>
    </div>
</div>
