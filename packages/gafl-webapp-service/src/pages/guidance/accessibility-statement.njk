{% extends "layout.njk" %}
{% from "back-link/macro.njk" import govukBackLink %}

{% block pageTitle %}{{ mssgs.access_statement_title }}{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        {{ govukBackLink({
          text: mssgs.back,
          href: uri.back,
          classes: "govuk-!-margin-bottom-7"
        }) }}

        <h1 class="govuk-heading-l">{{ mssgs.access_statement_heading }}</h1>
        <p class="govuk-body">{{ mssgs.access_statement_body }}</p>

        <ul class="govuk-list govuk-list--bullet">
            <li>{{ mssgs.access_statement_bulletpoint_1 }}</li>
            <li>{{ mssgs.access_statement_bulletpoint_2 }}</li>
            <li>{{ mssgs.access_statement_bulletpoint_3 }}</li>
            <li>{{ mssgs.access_statement_bulletpoint_4 }}</li>
            <li>{{ mssgs.access_statement_bulletpoint_5 }}</li>
        </ul>

        <p class="govuk-body">{{ mssgs.access_statement_made_simple }}</p>
        <p class="govuk-body"><a href="https://mcmw.abilitynet.org.uk/" class="govuk-link">{{ mssgs.access_statement_ability_net_link}}</a>{{ mssgs.access_statement_ability_net }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_how_subheading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_how_info }}</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>{{ mssgs.access_statement_how_info_bulletpoint_1 }}</li>
            <li>{{ mssgs.access_statement_how_info_bulletpoint_2 }}</li>
        </ul>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_feedback_subheading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_feedback_info }}</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>{{ mssgs.access_statement_feedback_info_bulletpoint_1 }}<a href="mailto:enquiries@environment-agency.gov.uk" class="govuk-link">{{ mssgs.access_statement_feedback_info_bulletpoint_1_link }}</a></li>
            <li>{{ mssgs.access_statement_feedback_info_bulletpoint_2_call }}<a href="tel:03708506506" class="govuk-link">{{ mssgs.access_statement_feedback_info_bulletpoint_2_link }}</a>{{ mssgs.access_statement_feedback_info_bulletpoint_2_times }}</li>
        </ul>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_reporting_subheading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_reporting_info }}</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>{{ mssgs.access_statement_feedback_info_bulletpoint_1 }}<a href="mailto:enquiries@environment-agency.gov.uk" class="govuk-link">{{ mssgs.access_statement_feedback_info_bulletpoint_1_link }}</a></li>
            <li>{{ mssgs.access_statement_feedback_info_bulletpoint_2_call }}<a href="tel:03708506506" class="govuk-link">{{ mssgs.access_statement_feedback_info_bulletpoint_2_link }}</a> {{ mssgs.access_statement_feedback_info_bulletpoint_2_times }}</li>
        </ul>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_enforcement_subheading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_enforcement_body }}<a href="https://www.equalityadvisoryservice.com/" class="govuk-link">{{ mssgs.access_statement_enforcement_link }}</a>{{ mssgs.period }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.contact_us_heading }}</h2>
        <p class="govuk-body">{{ mssgs.contact_us_body }}</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>{{ mssgs.access_statement_feedback_info_bulletpoint_1 }}<a href="mailto:enquiries@environment-agency.gov.uk" class="govuk-link">{{ mssgs.access_statement_feedback_info_bulletpoint_1_link }}</a></li>
            <li>{{ mssgs.twitter_bulletpoint }}<a href="https://www.twitter.com/envagency" class="govuk-link">{{ mssgs.twitter_bulletpoint_link }}</a></li>
            <li>{{ mssgs.facebook_bulletpoint }}<a href="https://www.facebook.com/environmentagency" class="govuk-link">{{ mssgs.facebook_bulletpoint_link }}</a></li>
        </ul>
        <p class="govuk-body">{{ mssgs.access_statement_visit }}</p>
        <p class="govuk-body">{{ mssgs.access_statement_visit_info }}<a href="https://www.gov.uk/government/organisations/environment-agency/about/access-and-opening" class="govuk-link">{{ mssgs.access_statement_visit_info_link }}</a>{{ mssgs.period }}</p>
        <p class="govuk-body">{{ mssgs.access_statement_visit_info_text_serivce }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_tech_heading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_tech_body }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_compliance_heading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_compliance_body_1 }}<a href="https://www.w3.org/TR/WCAG21/" class="govuk-link">{{ mssgs.access_statement_compliance_body_link }}</a>{{ mssgs.access_statement_compliance_body_2 }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_nonaccess_heading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_nonaccess_body }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_noncompliance_heading }}</h2>
        <ul class="govuk-list govuk-list--bullet">
            <li>{{ mssgs.access_statement_noncompliance_body_1 }}<a href="https://www.w3.org/WAI/WCAG21/Understanding/name-role-value.html" class="govuk-link">{{ mssgs.access_statement_noncompliance_body_link }}</a>{{ mssgs.access_statement_noncompliance_body_2 }}</li>
        </ul>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_burden_title }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_none }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_not_in_scope_title }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_none }}</p>

        <h2 class="govuk-heading-m">{{ mssgs.access_statement_prep_heading }}</h2>
        <p class="govuk-body">{{ mssgs.access_statement_prep_body_1 }}</p>
        <p class="govuk-body">{{ mssgs.access_statement_prep_body_2 }}</p>
        <p class="govuk-body">{{ mssgs.access_statement_prep_body_3 }}</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>{{ mssgs.access_statement_prep_bulletpoint_1 }}</li>
            <li>{{ mssgs.access_statement_prep_bulletpoint_2 }}</li>
            <li>{{ mssgs.access_statement_prep_bulletpoint_3 }}</li>
            <li>{{ mssgs.licence_type_1d }}</li>
        </ul>
        <p class="govuk-body">{{ mssgs.access_statement_prep_body_4 }}</p>
    </div>
</div>
{% endblock %}
