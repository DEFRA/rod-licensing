            [ { text: mssgs.new_prices_row_concession }, { text: '£30' }, { text: '£33' }, { text: '£35.80' }, { text: '£36.80' } ],
            [ { text: mssgs.new_prices_row_junior }, { text: mssgs.free }, { text: mssgs.free }, { text: mssgs.free }, { text: mssgs.free } ]
          ]
        }) }}

        <h2 class="govuk-heading-m">{{ mssgs.new_prices_salmon_table_heading }}</h2>

        {{ govukTable({
          firstCellIsHeader: true,
          head: [ { text: mssgs.new_prices_column_1 }, { text: mssgs.new_prices_column_2 }, { text: mssgs.new_prices_column_3 }, { text: mssgs.new_prices_column_4 }, { text: mssgs.new_prices_column_5 } ],
          rows: [
            [ { text: mssgs.new_prices_row_1_day }, { text: '£12' }, { text: '£12.60' }, { text: '£13.20' }, { text: '£13.50' } ],
