{% extends "layout.njk" %}
{% from "back-link/macro.njk" import govukBackLink %}

{% block pageTitle %}{{ mssgs.refund_title }}{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        {{ govukBackLink({
          text: mssgs.back,
          href: '/buy' + langCode,
          classes: "govuk-!-margin-bottom-7"
        }) }}
        <h1 class="govuk-heading-l">{{ mssgs.refund_heading }}</h1>
        <ol class="govuk-list govuk-list--number">
            <li class="govuk-body">{{ mssgs.refund_bulletpoint_1 }}</li>
            <li class="govuk-body">{{ mssgs.refund_bulletpoint_2_1 }}<a href="https://www.gov.uk/fishing-licences/buy-a-fishing-licence">{{ mssgs.refund_bulletpoint_2_link }}</a>{{ mssgs.refund_bulletpoint_2_2 }}</li>
            <li class="govuk-body">{{ mssgs.refund_bulletpoint_3 }}</li>
            <li class="govuk-body">{{ mssgs.refund_bulletpoint_4 }}</li>
            <li class="govuk-body">{{ mssgs.refund_bulletpoint_5 }}</li>
            <li class="govuk-body">{{ mssgs.refund_bulletpoint_6 }}</li>
            <li class="govuk-body">{{ mssgs.refund_bulletpoint_7 }}</li>
        </ol>
    </div>
</div>
{% endblock %}
