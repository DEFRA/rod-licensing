{% extends "layout.njk" %}
{% from "back-link/macro.njk" import govukBackLink %}

{% block pageTitle %}{{ mssgs.ordnance_title }}{% endblock %}

{% block beforeContent %}
      {{ govukBackLink({
        text: mssgs.back,
        href: uri.back,
        classes: "govuk-!-margin-bottom-7"
      }) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">{{ mssgs.ordnance_subheading }}</h1>

        <p class="govuk-body">
                {{ mssgs.ordnance_body_1 }}
                <a class="govuk-link" href="http://www.ordnancesurvey.co.uk" rel="noreferrer noopener" target="_blank">{{ mssgs.ordnance_body_link }}</a>
                {{ mssgs.ordnance_body_2 }}
        </p>

        <ol class="govuk-list govuk-list--number">
            <li>{{ mssgs.ordnance_body_bulletpoint_1 }}</li>
            <li>{{ mssgs.ordnance_body_bulletpoint_2 }}</li>
            <li>{{ mssgs.ordnance_body_bulletpoint_3 }}</li>
        </ol>
    </div>
</div>
{% endblock %}
