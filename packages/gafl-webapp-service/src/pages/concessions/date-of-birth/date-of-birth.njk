{% extends "standard-form.njk" %}

{% from "date-input/macro.njk" import govukDateInput %}
{% from "inset-text/macro.njk" import govukInsetText %}
{% from "warning-text/macro.njk" import govukWarningText %}

{% set title = mssgs.dob_title_you if data.isLicenceForYou else mssgs.dob_title_other %}
{% set describedByTag = "date-of-birth-hint" %}

{%
    set errorMap = {
        'day': {
            'any.required': { ref: '#date-of-birth-day', text: mssgs.dob_error_missing_day },
            'number.base': { ref: '#date-of-birth-day', text: mssgs.dob_error_non_numeric },
            'number.integer': { ref: '#date-of-birth-day', text: mssgs.dob_error_date_real },
            'number.min': { ref: '#date-of-birth-day', text: mssgs.dob_error_date_real },
            'number.max': { ref: '#date-of-birth-day', text: mssgs.dob_error_date_real }
        },
        'month': {
            'any.required': { ref: '#date-of-birth-month', text: mssgs.dob_error_missing_month },
            'number.base': { ref: '#date-of-birth-month', text: mssgs.dob_error_non_numeric },
            'number.integer': { ref: '#date-of-birth-month', text: mssgs.dob_error_date_real },
            'number.min': { ref: '#date-of-birth-month', text: mssgs.dob_error_date_real },
            'number.max': { ref: '#date-of-birth-month', text: mssgs.dob_error_date_real }
        },
        'year': {
            'any.required': { ref: '#date-of-birth-year', text: mssgs.dob_error_missing_year },
            'number.base': { ref: '#date-of-birth-year', text: mssgs.dob_error_non_numeric },
            'number.integer': { ref: '#date-of-birth-year', text: mssgs.dob_error_date_real },
            'number.min': {
              ref: '#date-of-birth-year',
              text: mssgs.dob_error_year_min_you if data.isLicenceForYou else mssgs.dob_error_year_min_other
            },
            'number.max': { ref: '#date-of-birth-year', text: mssgs.dob_error_year_max }
        },
        'date-of-birth': {
            'date.real': { ref: '#date-of-birth-day', text: mssgs.dob_error_date_real }
        }
    }
%}

{% set dateInputItems = [
    {
      label: mssgs.dob_day,
      name: 'day',
      classes: "govuk-input--width-2",
      value: payload['date-of-birth-day'],
      attributes: { maxlength : 2 }
    },
    {
      label: mssgs.dob_month,
      name: 'month',
      classes: "govuk-input--width-2",
      value: payload['date-of-birth-month'],
      attributes: { maxlength : 2 }
    },
    {
      label: mssgs.dob_year,
      name: 'year',
      classes: "govuk-input--width-4",
      value: payload['date-of-birth-year'],
      attributes: { maxlength : 4 }
    }
  ]
%}

{% block pageContent %}
    <div id="{{ describedByTag }}" class="govuk-hint">
      {{ mssgs.dob_entry_hint }}
    </div>

    {{ govukWarningText({
      html: mssgs.dob_privacy_link_prefix + '<a class="govuk-link" href="' + _uri.privacy + '" rel="noreferrer noopener" target="_blank">' + mssgs.dob_privacy_link + '</a>',
      iconFallbackText: mssgs.warning
    }) }}

    {{ govukDateInput({
      id: "date-of-birth",
      namePrefix: "date-of-birth",
      items: dateInputItems,
      errorMessage: { text: mssgs.dob_error } if error
    }) }}
{% endblock %}
