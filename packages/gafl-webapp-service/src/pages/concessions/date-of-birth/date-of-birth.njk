{% extends "standard-form.njk" %}

{% from "date-input/macro.njk" import govukDateInput %}
{% set title = "What is your date of birth?" if data.isLicenceForYou else "What is the person's date of birth?" %}

{%
    set errorMap = {
        'date-of-birth': {
            'date.format': { ref: '#date-of-birth-day', text: "Enter the licence holder's date of birth and include a day, month and year" },
            'date.max': { ref: '#date-of-birth-day', text: 'The date of birth must be in the past' },
            'date.min': { ref: '#date-of-birth-day', text: 'Enter the date of birth and include a day, month and year' }
        }
    }
%}

{% set dateInputItems = [
    {
      name: "day",
      classes: "govuk-input--width-2",
      value: payload['date-of-birth-day'],
      attributes: { maxlength : 2 }
    },
    {
      name: "month",
      classes: "govuk-input--width-2",
      value: payload['date-of-birth-month'],
      attributes: { maxlength : 2 }
    },
    {
      name: "year",
      classes: "govuk-input--width-4",
      value: payload['date-of-birth-year'],
      attributes: { maxlength : 4 }
    }
  ]
%}

{% block pageContent %}

    {{ govukDateInput({
      id: "date-of-birth",
      namePrefix: "date-of-birth",
      items: dateInputItems,
      errorMessage: { text: 'Enter the date of birth' } if error,
      hint: {
        text: "For example, 23 11 1979"
      }
    }) }}
    <div class="govuk-body-m">Read about <a class="govuk-link" href="{{ _uri.privacy }}">how we use personal information</a>.</div>
{% endblock %}
