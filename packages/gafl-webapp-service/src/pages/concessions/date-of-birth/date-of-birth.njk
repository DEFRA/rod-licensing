    {{ govukWarningText({
      html: mssgs.dob_privacy_link_prefix + '<a class="govuk-link" href="' + _uri.privacy + '" rel="noreferrer noopener" target="_blank">' + mssgs.dob_privacy_link + '</a>',
      iconFallbackText: mssgs.warning
    }) }}

    {% if error %}
    <div class="govuk-error-summary" data-module="govuk-error-summary">
      <div role="alert">
        <h2 class="govuk-error-summary__title">
          There is a problem
        </h2>
        <div class="govuk-error-summary__body">
          <ul class="govuk-list govuk-error-summary__list">
            {% for errKey, errValue in error %}
              {% if errorMap[errKey] %}
                <li><a href="{{ errorMap[errKey].ref }}">{{ errorMap[errKey].text }}</a></li>
              {% else %}
                <li><a href="#">{{ errKey }}: {{ errValue }}</a></li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
    {% endif %}

    {{ govukDateInput({
      id: "date-of-birth",
