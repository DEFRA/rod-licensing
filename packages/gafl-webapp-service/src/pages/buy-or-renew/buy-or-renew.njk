{% extends "standard-form.njk" %}
{% from "radios/macro.njk" import govukRadios %}
{% from "warning-text/macro.njk" import govukWarningText %}

{% set title = mssgs.buy_or_renew_title %}

{%
    set errorMap = {
        'buy-or-renew': {
            'any.required': { ref: '#buy-or-renew', text: mssgs.buy_or_renew_error_choose }
        }
    }
%}

{% block pageContent %}
    {{ govukRadios({
        idPrefix: "buy-or-renew",
        name: "buy-or-renew",
        items: [
            {
                text: mssgs.buy_or_renew_label_buy,
                value: "buy-licence",
                checked: payload['buy-or-renew'] === 'buy-licence'
            },
            {
                text: mssgs.buy_or_renew_label_renew,
                value: "renew-licence",
                checked: payload['buy-or-renew'] === 'renew-licence'
            }
        ],
        errorMessage: { text: mssgs.buy_or_renew_error_choose } if error['buy-or-renew']
    }) }}
{% endblock %}
