{% from "notification-banner/macro.njk" import govukNotificationBanner %}

{% macro notificationBanner(newPricesUri) %}
    {% set html %}
    <h3 class="govuk-notification-banner__heading">
        {{ mssgs.price_increase_notification_heading }}
    </h3>
    <p class="govuk-body">
        {{ mssgs.price_increase_notification_text }} <a class="govuk-notification-banner__link" href="{{ newPricesUri }}">{{ mssgs.price_increase_notification_link_text }}</a>
    </p>

    {% endset %}

    {{ govukNotificationBanner({
    html: html
    }) }}
{% endmacro %}
