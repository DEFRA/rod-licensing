{% extends "layout.njk" %}

{% from "button/macro.njk" import govukButton %}
{% block pageTitle %}{{ mssgs.account_disabled_title }}{{ mssgs.gov_uk }}{% endblock %}
{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">{{ mssgs.account_disabled_title }}</h1>
        <p class="govuk-body">
            {{ mssgs.account_disabled_body_1 }}
        </p>
        <p class="govuk-body">
            {{ mssgs.role_required_body_2 }}
        </p>

        {{ govukButton({
            href: uri.buy,
            attributes: { id: 'continue' },
            text: mssgs.try_again,
            classes: "govuk-!-margin-top-5 no-print"
        }) }}
   </div>
</div>
{% endblock %}
