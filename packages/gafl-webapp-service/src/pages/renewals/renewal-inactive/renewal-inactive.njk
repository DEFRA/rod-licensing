{% extends "layout.njk" %}
{% from "fieldset/macro.njk" import govukFieldset %}

{% set title = data.title %}

{% block pageTitle %}{{ title }}{{ mssgs.gov_uk }}{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            {% call govukFieldset({
                legend: {
                    text: title,
                    classes: "govuk-fieldset__legend--l govuk-!-margin-bottom-3",
                    isPageHeading: true
                }
            }) %}

            <p class="govuk-body-l">{{data.bodyMessage}}</p>            
            <p class="govuk-body-l">{{ mssgs.renewal_inactive_title_4 }}<a href="{{ data.uri.new }}" class="govuk-link">{{ mssgs.renewal_inactive_title_link }}</a></p>

            {% endcall %}
        </div>
    </div>
{% endblock %}
