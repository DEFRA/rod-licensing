{% extends "layout.njk" %}

{% from "fieldset/macro.njk" import govukFieldset %}
{% from "button/macro.njk" import govukButton %}
{% from "checkboxes/macro.njk" import govukCheckboxes %}
{% from "error-summary.njk" import errorSummary %}
{% from "warning-text/macro.njk" import govukWarningText %}
{% from "page-title.njk" import pageTitle %}

{% set title = data.title %}

{% block pageTitle %}{{ pageTitle(title, error, mssgs) }}{% endblock %}

{%
    set errorMap = {
        'agree': {
            'any.required': { ref: '#agree', text: mssgs.terms_conds_error }
        }
    }
%}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        {{ errorSummary(error, errorMap, mssgs.there_is_a_problem) }}

        <form method="post">

            {% call govukFieldset({
              legend: {
                text: title,
                classes: "govuk-fieldset__legend--l govuk-!-margin-bottom-3",
                isPageHeading: true
              }
            }) %}

                <div class="govuk-!-margin-bottom-9">
                    <p class="govuk-body">{{ data.body }}</p>
                    <ul class="govuk-list govuk-list--bullet">
                        <li>{{ data.bulletpointOne }}</li>
                        <li>{{ data.bulletpointTwo }}</li>
                        <li>{{ data.bulletpointThree }}</li>
                        <li>{{ data.bulletpointFourPartOne }}<a class="govuk-link" href="https://www.gov.uk/freshwater-rod-fishing-rules" rel="noreferrer noopener" target="_blank">{{ data.bulletpointFourLink }}</a>{{ data.bulletpointFourPartTwo }}</li>
                        <li>{{ data.bulletpointFive }}</li>
                        {% if data.isSalmonAndSeaTrout %}
                            {% if data.afterFulfilmentSwitchover %}
                                <li>{{ data.bulletpointSix }}<a class="govuk-link" href="https://www.gov.uk/catch-return" rel="noreferrer noopener" target="_blank">{{ data.bulletpointSixLink }}</a></li>
                            {% else %}
                                <li>{{ mssgs.terms_conds_bulletpoint_6_1 }}<a class="govuk-link" href="https://www.gov.uk/catch-return" rel="noreferrer noopener" target="_blank">{{ mssgs.terms_conds_bulletpoint_6_link }}</a>{{ mssgs.terms_conds_bulletpoint_6_2 }}</li>
                                {% endif %}
                        {% endif %}
                    </ul>
                </div>

                {{ govukCheckboxes({
                  idPrefix: "agree",
                  name: "agree",
                  errorMessage: { text: mssgs.terms_conds_error_must_agree } if error,
                  items: [
                    {
                      value: "yes",
                      text: data.agree
                    }
                  ]
                }) }}

                {% if data.paymentRequired %}
                    {{ govukWarningText({
                        text: mssgs.terms_conds_warning,
                        iconFallbackText: "Warning"
                    }) }}
                {% endif %}

            {% endcall %}

                {{ govukButton({
                    attributes: { id: 'continue' },
                    preventDoubleClick: true,
                    name: "continue",
                    text: mssgs.terms_conds_pay_button_1 if data.paymentRequired else mssgs.terms_conds_pay_button_2,
                    classes: "govuk-!-margin-top-5"
                }) }}

                {% if data.paymentRequired %}
                    <span class="govuk-caption-m">{{ mssgs.terms_conds_pay_on_gov_uk }}</span>
                {% endif %}

            {{ csrf() }}
        </form>
    </div>
</div>
{% endblock %}
