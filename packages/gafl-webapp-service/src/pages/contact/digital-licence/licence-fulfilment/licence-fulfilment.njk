{% extends "standard-form.njk" %}
{% from "radios/macro.njk" import govukRadios %}

{% set title = "Do you want to go paperless?" %}

{% set errorMsg = 'Choose if you want this licence to be paperless' %}

{% set errorMap = {
        'licence-option': {
            'any.required': { ref: '#licence-option', text: errorMsg }
        }
    }
%}

{% block pageContent %}
    <p class="govuk-body">Getting a licence by email or text message helps the environment by reducing paper use and help us to save money, which we can invest in fishing.</p>
    {{ govukRadios({
        idPrefix: "licence-option",
        name: "licence-option",
        items: [
            {
                value: "digital",
                text: "Yes, go paperless",
                checked: payload['licence-option'] === 'digital',
                hint: {
                    html: '<ul class="govuk-list govuk-list--bullet"><li>we\'ll send the fishing licence by email or text message</li><li>the email or text message is proof of your fishing licence</li></ul>'
                }
            },
            {
                value: "paper-licence",
                text: "No, get a card",
                checked: payload['licence-option'] === 'paper-licence',
                hint: {
                    html: '<ul class="govuk-list govuk-list--bullet"><li>if we have the licence holderâ€™s email or mobile phone number, we\'ll send a copy of the licence details</li><li>get the fishing licence card within 15 working days</li></ul>'
                }
            }
        ],
        errorMessage: { text: errorMsg } if error['licence-option']
    }) }}
{% endblock %}

{% block pricingSummary %}
<div class="govuk-grid-column-two-thirds">
    <p class="govuk-body">
        <a href="https://www.gov.uk/government/publications/fisheries-annual-report-2019-to-2020/fisheries-annual-report-2019-to-2020" rel="noreferrer noopener" class="govuk-link" target="_blank">See how we spend money on fish and fishing (opens in a new tab)</a>.
    </p>
</div>
{% endblock %}
