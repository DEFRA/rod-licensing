{% extends "standard-form.njk" %}
{% from "radios/macro.njk" import govukRadios %}

{% set title = mssgs.licence_fufilment_title_you if data.isLicenceForYou else mssgs.licence_fufilment_title_other %}

{% set errorMsg = mssgs.licence_fufilment_error %}

{% set errorMap = {
        'licence-option': {
            'any.required': { ref: '#licence-option', text: errorMsg }
        }
    }
%}

{% block pageContent %}
    <p class="govuk-body">{{ mssgs.licence_fufilment_content_info }}</p>
    {{ govukRadios({
        idPrefix: "licence-option",
        name: "licence-option",
        items: [
            {
                value: "digital",
                text: mssgs.licence_fufilment_radio_paperless,
                checked: payload['licence-option'] === 'digital',
                hint: {
                    html: '<ul class="govuk-list govuk-list--bullet"><li>' + mssgs.licence_fufilment_radio_paperless_hint1 + '</li><li>' + mssgs.licence_fufilment_radio_paperless_hint2 + '</li></ul>'
                }
            },
            {
                value: "paper-licence",
                text: mssgs.licence_fufilment_radio_card,
                checked: payload['licence-option'] === 'paper-licence',
                hint: {
                    html: '<ul class="govuk-list govuk-list--bullet"><li>' + mssgs.licence_fufilment_radio_card_hint1 + '</li><li>' + mssgs.licence_fufilment_radio_card_hint2 + '</li></ul>'
                }
            }
        ],
        errorMessage: { text: errorMsg } if error['licence-option']
    }) }}
{% endblock %}

{% block pricingSummary %}
<div class="govuk-grid-column-two-thirds">
    <p class="govuk-body">
        <a href="https://www.gov.uk/government/publications/fisheries-annual-report-2019-to-2020/fisheries-annual-report-2019-to-2020" rel="noreferrer noopener" class="govuk-link" target="_blank">{{ mssgs.licence_fufilment_how_we_spend_link }}</a>
    </p>
</div>
{% endblock %}
