{% extends "standard-form.njk" %}
{% from "radios/macro.njk" import govukRadios %}

{% set title = mssgs.licence_fulfilment_title_you if data.isLicenceForYou else mssgs.licence_fulfilment_title_other %}

{% set errorMsg = mssgs.licence_fulfilment_error %}

{% set errorMap = {
        'licence-option': {
            'any.required': { ref: '#licence-option', text: mssgs.licence_fulfilment_error }
        }
    }
%}

{% block pageContent %}
    <p class="govuk-body">{{ mssgs.licence_fulfilment_content_info }}</p>
    {{ govukRadios({
        idPrefix: "licence-option",
        name: "licence-option",
        items: [
            {
                value: "digital",
                text: mssgs.licence_fulfilment_radio_paperless,
                checked: payload['licence-option'] === 'digital',
                hint: {
                    html: mssgs.licence_fulfilment_radio_paperless_hint_you if data.isLicenceForYou else mssgs.licence_fulfilment_radio_paperless_hint_other
                }
            },
            {
                value: "paper-licence",
                text: mssgs.licence_fulfilment_radio_card,
                checked: payload['licence-option'] === 'paper-licence',
                hint: {
                    html: mssgs.licence_fulfilment_radio_card_hint_you if data.isLicenceForYou else mssgs.licence_fulfilment_radio_card_hint_other
                }
            }
        ],
        errorMessage: { text: mssgs.licence_fulfilment_error_msg } if error['licence-option']
    }) }}
{% endblock %}
