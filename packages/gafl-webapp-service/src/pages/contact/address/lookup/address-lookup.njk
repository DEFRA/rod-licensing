{% extends "layout.njk" %}

{% from "fieldset/macro.njk" import govukFieldset %}
{% from "button/macro.njk" import govukButton %}
{% from "error-summary.njk" import errorSummary %}
{% from "input/macro.njk" import govukInput %}
{% from "back-link/macro.njk" import govukBackLink %}

{% block pageTitle %}Find {{ data.pronoun }} address - GOV.UK{% endblock %}

{% set errorMap = {
        'premises': {
            'string.empty': { ref: '#premises', text: 'Enter a building number or name' },
            'string.max': { ref: '#premises', text: 'The building number or name must be less than 50 characters' }
        },
        'postcode': {
            'string.empty': { ref: '#postcode', text: 'Enter a postcode' },
            'string.pattern.base': { ref: '#postcode', text: 'Enter a UK postcode. If the address is outside the UK, enter the address manually.' }
        }
    }
%}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        {% if backRef %}
            {{ govukBackLink({
              text: "Back",
              href: backRef,
              classes: "govuk-!-margin-bottom-7"
            }) }}
        {% endif %}
        {{ errorSummary(error, errorMap) }}
        <form method="post">

            {% call govukFieldset({
              legend: {
                text: 'Find ' + data.pronoun + ' address',
                classes: "govuk-fieldset__legend--l govuk-!-margin-bottom-3",
                isPageHeading: true
              }
            }) %}

                <p class="govuk-body-m">
                    This is where we will send the licence card. A bankside enforcement officer may ask for this information if the licence is checked.
                </p>

                {{ govukInput({
                  label: {
                    text: "Building number or name"
                  },
                  id: "premises",
                  name: "premises",
                  hint: { text: "For example, Flat 20A" },
                  value: payload['premises'],
                  classes: "govuk-input--width-20",
                  attributes: { maxlength: 50 },
                  errorMessage: { text: 'Enter a building number or name' } if error['premises']
                }) }}

                {{ govukInput({
                  label: {
                    text: "Postcode"
                  },
                  id: "postcode",
                  name: "postcode",
                  hint: { text: "For example, WA4 1AB" },
                  value: payload['postcode'],
                  autocomplete: 'postal-code',
                  classes: "govuk-input--width-20",
                  attributes: { maxlength: 10 },
                  errorMessage: { text: 'Enter a postcode' } if error['postcode']
                }) }}

                {{ govukButton({
                    attributes: { id: 'continue' },
                    preventDoubleClick: true,
                    name: "continue",
                    text: "Continue",
                    classes: "govuk-!-margin-top-5"
                }) }}

            {% endcall %}
            <p class="govuk-body-m">
                <a class="govuk-link" href="{{ data.uri.entryPage }}">Enter the address manually</a>
            </p>
            {{ csrf() }}
        </form>
      <p class="govuk-body-s">Â© Crown copyright and database rights 2016 <a class="govuk-link" href="http://www.ordnancesurvey.co.uk" rel="noreferrer noopener" target="_blank">OS (opens in a new tab)</a> 100024198.
      <br>Use of this addressing data is subject to&nbsp;the <a class="govuk-link" href="{{ data.uri.osTerms }}">terms and conditions</a>.</p>
    </div>
</div>
{% endblock %}
