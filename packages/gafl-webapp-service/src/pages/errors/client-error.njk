{% extends "layout.njk" %}
{% from "fieldset/macro.njk" import govukFieldset %}
{% from "button/macro.njk" import govukButton %}

{% set title = '' %}
{% if clientError.statusCode === 400 %}
    {% set title = 'Bad request' %}
{% elseif clientError.statusCode === 401 %}
    {% set title = 'Unauthorized' %}
{% elseif clientError.statusCode === 403 %}
    {% set title = 'Forbidden' %}
{% elseif clientError.statusCode === 404 %}
    {% set title = 'Page not found' %}
{% endif %}

{% block pageTitle %}Sorry, there is a problem with the service - {{title}}{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
            {% call govukFieldset({
              legend: {
                text: "Sorry, there is a problem with the service",
                classes: "govuk-fieldset__legend--l govuk-!-margin-bottom-6",
                isPageHeading: true
              }
            }) %}
            <p class="govuk-body-m">
                You can <a class="govuk-link" href="javascript:history.back()">try to get back to your application</a>.
            </p>
            <p class="govuk-body">
                If that does not work, you will have to <a class="govuk-link" href="{{ uri.new }}">start again</a>. Sorry.
            </p>
            {% endcall %}
     </div>
</div>
{% endblock %}
