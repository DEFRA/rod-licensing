####################################################################################
# GAFL Webapp
####################################################################################
NODE_ENV=development

# Redis
REDIS_HOST=host.docker.internal
REDIS_PORT=6379

# Address lookup
ADDRESS_LOOKUP_URL=http://host.docker.internal:9002/address-service/v1/addresses/postcode-and-premises
ADDRESS_LOOKUP_KEY=IWTFdev

# Survey
FEEDBACK_URI=https://www.smartsurvey.co.uk/s/0L205/

# GOV.UK Pay
GOV_PAY_API_URL=https://publicapi.payments.service.gov.uk/v1/payments
GOV_PAY_HTTPS_REDIRECT=false
GOV_PAY_REQUEST_TIMEOUT_MS=10000

# Sales API
SALES_API_URL=http://host.docker.internal:4000

# Debug settings
DEBUG=webapp:*

# Tracking
#ANALYTICS_PRIMARY_PROPERTY=G-XXXXXXXX

# Welsh language feature switch
SHOW_WELSH_CONTENT=true

# Error handler feature switch
ERROR_PAGE_ROUTE=false

# Log Analytics switch
ENABLE_ANALYTICS_OPT_IN_DEBUGGING=true

# Notification banner switch
SHOW_NOTIFICATION_BANNER=true
